{
  "AllowedHosts": "*",
  "DatabaseConnection": "",
  "Kook": {
    "Token": "",
    "EnableDebug": false,
    "ConnectTimeout": 6000
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    },
    "NLog": {
      "IncludeScopes": true,
      "RemoveLoggerFactoryFilter": true
    }
  },
  "Puppeteer": {
    "ChromiumPath": "/usr/bin/chromium"
  },
  "NLog": {
    "targets": {
      "logfile": {
        "type": "File",
        "fileName": "application.log",
        "layout": "[${level:uppercase=true}] [${longdate}] ${logger} [${threadid}] ${message:withexception=true}"
      },
      "lifecycle": {
        "type": "File",
        "fileName": "lifecycle.log",
        "layout": "[${level:uppercase=true}] [${longdate}] ${logger} [${threadid}] ${message:withexception=true}"
      },
      "logconsole": {
        "type": "Console",
        "layout": "[${level:uppercase=true}] [${longdate}] ${logger} [${threadid}] ${message:withexception=true}"
      }
    },
    "rules": [
      {
        "logger": "Microsoft.Hosting.Lifetime",
        "minLevel": "Info",
        "writeTo": "lifecycle,logfile",
        "final": true
      },
      {
        "logger": "Microsoft.EntityFrameworkCore.Database.Command",
        "minLevel": "Info",
        "finalMinLevel": "Warn",
        "final": true
      },
      {
        "logger": "Microsoft.*",
        "minLevel": "Warn",
        "final": true
      },
      {
        "logger": "System.Net.Http.*",
        "maxLevel": "Info",
        "final": true
      },
      {
        "logger": "*",
        "minLevel": "Info",
        "writeTo": "logconsole"
      },
      {
        "logger": "*",
        "minLevel": "Debug",
        "writeTo": "logfile"
      }
    ]
  }
}
